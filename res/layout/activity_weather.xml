                    android:gravity="center"
                    android:text="微风1级"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDay3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day3week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="星期四"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_week" />

                <TextView
                    android:id="@+id/day3date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="05-07"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_week"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/day3image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/weather_image_more_weather"
                    android:src="@drawable/icon_weather_sun_white" />

                <TextView
                    android:id="@+id/day3tmpHigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="35°"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />

                <TextView
                    android:id="@+id/day3tmpLow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="25°"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/day3wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="微风1级"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDay4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day4week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="星期五"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_week" />

                <TextView
                    android:id="@+id/day4date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="05-08"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_week"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/day4image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/weather_image_more_weather"
                    android:src="@drawable/icon_weather_sun_white" />

                <TextView
                    android:id="@+id/day4tmpHigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="35°"
