<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutWeather"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="5" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:src="@drawable/icon_location" >
                    </ImageView>

                    <TextView
                        android:id="@+id/textLocation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="北京市"
                        android:textColor="#ffffff"
                        android:textSize="14sp" >
                    </TextView>
                </LinearLayout>

                <TextClock
                    android:id="@+id/textClock"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:format12Hour="HH:mm"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="60sp" />

                <TextClock
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:format12Hour="yyyy年MM月dd日"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextClock
                    android:id="@+id/textWeek"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:format12Hour="EEEE"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageTodayWeather"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:padding="10dp"
                    android:src="@drawable/icon_weather_sun_white" />

                <TextView
                    android:id="@+id/textTodayWeather"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="晴"
                    android:textColor="#ffffff"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textUpdateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/imageRefresh"
                        android:gravity="center_vertical"
                        android:text="发布时间 09:30"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/weather_text_post_time" />

                    <ImageView
                        android:id="@+id/imageRefresh"
                        android:layout_width="@dimen/weather_text_post_time"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="2dp"
                        android:src="@drawable/weather_post_time" />

                    <ProgressBar
                        android:id="@+id/updateProgress"
                        android:layout_width="@dimen/weather_button_update"
                        android:layout_height="@dimen/weather_button_update"
                        android:layout_alignParentRight="true"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/updateButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/weather_update_button" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_tmp_low" />

                    <com.tchip.carlauncher.view.TitanicTextView
                        android:id="@+id/textTempRange"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="15-35"
                        android:textColor="#c2c2c2"
                        android:textSize="80sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:paddingTop="15dp"
                        android:text="℃"
                        android:textColor="#ffffff"
                        android:textSize="50sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/weather_more_info_image_size"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_toLeftOf="@+id/textWind"
                        android:padding="1dp"
                        android:src="@drawable/icon_wind" />

                    <TextView
                        android:id="@+id/textWind"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/weather_margin_more_info"
                        android:gravity="center_vertical"
                        android:text="西北风5级"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/weather_more_info_text_size" />

                    <ImageView
                        android:layout_width="@dimen/weather_text_wind_today"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@drawable/icon_weather_air_good" />

                    <TextView
                        android:id="@+id/textAirCondation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/weather_margin_more_info"
                        android:gravity="center_vertical"
                        android:text="空气质量优"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/weather_more_info_text_size" />

                    <ImageView
                        android:layout_width="@dimen/weather_more_info_image_size"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:padding="1dp"
                        android:src="@drawable/icon_hygrometer" />

                    <TextView
                        android:id="@+id/textWetLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="湿度55%"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/weather_more_info_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="4" >

            <LinearLayout
                android:id="@+id/layoutDay1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day1week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="星期二"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_week" />

                <TextView
                    android:id="@+id/day1date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="05-05"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_week"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/day1image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/weather_image_more_weather"
                    android:src="@drawable/icon_weather_sun_white" />

                <TextView
                    android:id="@+id/day1tmpHigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="35°"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />

                <TextView
                    android:id="@+id/day1tmpLow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="25°"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/day1wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="微风1级"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_text_more_temp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDay2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day2week"
