                android:layout_margin="2dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/day3wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="微风1级"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDay4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/day4week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="星期五"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/day4date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="05-08"
                android:textColor="#ffffff"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/day4image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/icon_weather_sun_white" />

            <TextView
                android:id="@+id/day4tmpHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="35°"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/day4tmpLow"
                android:layout_width="match_parent"
