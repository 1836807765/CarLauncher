<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">


    <RelativeLayout
        android:id="@+id/layoutMiddle"
        android:layout_width="match_parent"
        android:layout_height="300px">

        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/layoutNavRecord"
            android:layout_width="match_parent"
            android:layout_height="150px">

            <Button
                android:id="@+id/btnNavigation"
                android:layout_alignParentLeft="true"
                android:layout_width="300px"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnDriveRecord"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:layout_width="300px"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_below="@id/layoutNavRecord"
            android:layout_width="match_parent"
            android:layout_height="150px">

            <Button
                android:layout_alignParentLeft="true"
                android:layout_width="300px"
                android:layout_height="match_parent" />

            <Button
                android:layout_alignParentRight="true"
                android:layout_marginRight="53px"
                android:layout_width="300px"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <TextView
            android:text="导航"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="28px"
            android:layout_marginLeft="60px"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="行车记录仪"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28px"
            android:layout_marginRight="60px"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="文件管理"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="178px"
            android:layout_marginLeft="90px"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="浏览器"
            android:layout_alignParentRight="true"
            android:layout_marginTop="178px"
            android:layout_marginRight="90px"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:layout_width="231px"
            android:layout_height="231px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnLogo"
            android:visibility="gone"
            android:layout_width="200px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="200px" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <TextClock
            android:id="@+id/textClock"
            android:textSize="28px"
            android:format12Hour="hh:mm"
            android:textColor="#ffffff"
            android:layout_marginTop="25px"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
