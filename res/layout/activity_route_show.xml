<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/driveRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driving Route" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/routeMap"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.tchip.carlauncher.view.ButtonFloat
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="#1E88E5" />

    <com.tchip.carlauncher.view.ButtonFloat
        android:id="@+id/btnToRouteListFromShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="#1E88E5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_route_plan_search_bg"
        android:layout_marginTop="5dp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/btnDistance"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="直线距离:555m 行驶距离:888m"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>