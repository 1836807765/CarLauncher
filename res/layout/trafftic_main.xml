<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/Text_1"
                android:text="开启流量悬浮窗" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/float_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/cur_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cur_type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cur_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cur_interval"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="数据流量"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/total_mobile"
                    style="@style/Text_1"
                    android:text="0KB" />

                <TextView
                    style="@style/Text_1"
                    android:layout_marginTop="5dp"
                    android:text="本月使用" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_mobile"
                    style="@style/Text_1"
                    android:text="0KB" />

                <TextView
                    style="@style/Text_1"
                    android:layout_marginTop="5dp"
                    android:text="今日使用" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/Text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi流量" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/total_wifi"
                    style="@style/Text_1"
                    android:text="0KB" />

                <TextView
                    style="@style/Text_1"
                    android:layout_marginTop="5dp"
                    android:text="本月使用" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_wifi"
                    style="@style/Text_1"
                    android:text="0KB" />

                <TextView
                    style="@style/Text_1"
                    android:layout_marginTop="5dp"
                    android:text="今日使用" />
            </LinearLayout>
        </LinearLayout>

     
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/Text_1"
                android:layout_marginLeft="5dp"
                android:text="应用名称" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/Text_1"
                android:layout_marginRight="5dp"
                android:text="本月流量" />
        </LinearLayout>

        <ListView
            android:id="@+id/app_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00ffffff"
            android:dividerHeight="0.5dp"
            android:fadingEdge="none"
            android:scrollbars="@null" />
    </LinearLayout>

</LinearLayout>