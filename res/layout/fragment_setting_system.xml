<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#cccccc" />


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleDisplay"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="显示"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleSound"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="声音"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleWifi"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="Wi-Fi"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleBluetooth"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="蓝牙"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleApp"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="应用程序"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleDate"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="日期和时间"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <com.tchip.carlauncher.view.LayoutRipple
                    android:id="@+id/layoutRippleAbout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="#FFF"
                    android:clickable="true" >

                    <ImageView
                        android:layout_width="@dimen/setting_item_image"
                        android:layout_height="@dimen/setting_item_image"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                        android:src="@drawable/icn_button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                        android:text="关于"
                        android:textColor="#000000"
                        android:textSize="@dimen/setting_item_text_size" />
                </com.tchip.carlauncher.view.LayoutRipple>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />
            </LinearLayout>
        </ScrollView>
</LinearLayout>