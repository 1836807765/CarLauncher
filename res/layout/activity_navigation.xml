<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="北京" />

        <AutoCompleteTextView
            android:id="@+id/searchkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.88"
            android:text="餐厅" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/map_next_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:onClick="goToNextPage"
            android:padding="10dip"
            android:text="下一组数据" />
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <RelativeLayout
            android:id="@+id/layoutBack"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/btnToNearFromResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ui_back_arrow_bg_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ui_near_arrow_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutNear"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/layoutBack"
            android:background="@drawable/ui_back_arrow_bg_black" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:text="周边"
                android:textColor="#dddddd"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutStar"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/layoutNear"
            android:background="@drawable/ui_back_arrow_bg_black" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:text="收藏"
                android:textColor="#dddddd"
                android:textSize="25sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnNavi"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ui_near_search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/btnNavi"
            android:layout_toRightOf="@id/layoutStar"
            android:background="#000000" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNaviVoice"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ui_back_arrow_bg_black"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imgVoiceSearch"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_route_microphone" />
            </LinearLayout>

            <EditText
                android:id="@+id/etNaviWhere"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="导航目的地"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="#dddddd"
                android:textColorHint="#cccccc"
                android:textSize="24sp" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/listResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTop"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/layoutNearAdvice"
        android:background="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutTop"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginBottom="5dp" >

            <RelativeLayout
                android:id="@+id/layoutNearOilStation"
                android:layout_width="@dimen/ui_near_item_width"
                android:layout_height="@dimen/ui_near_item_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ui_near_oil" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="加油站"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ui_near_item_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutNearParking"
                android:layout_width="@dimen/ui_near_item_width"
                android:layout_height="@dimen/ui_near_item_height"
                android:layout_marginRight="5dp"
                android:background="@drawable/ui_near_parking" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="停车场"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ui_near_item_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutNear4s"
                android:layout_width="@dimen/ui_near_item_width"
                android:layout_height="@dimen/ui_near_item_height"
                android:layout_marginRight="5dp"
                android:background="@drawable/ui_near_4s" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="4S"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ui_near_item_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp" >

            <RelativeLayout
                android:id="@+id/layoutNearBank"
                android:layout_width="@dimen/ui_near_item_width"
                android:layout_height="@dimen/ui_near_item_height"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ui_near_atm" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="ATM"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ui_near_item_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutShop"
                android:layout_width="@dimen/ui_near_item_width"
                android:layout_height="@dimen/ui_near_item_height"
                android:layout_marginRight="5dp"
                android:background="@drawable/ui_near_shop" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="超市"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ui_near_item_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutNearHotel"
                android:layout_width="@dimen/ui_near_item_width"
                android:layout_height="@dimen/ui_near_item_height"
                android:layout_marginRight="5dp"
                android:background="@drawable/ui_near_hotel" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="酒店"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ui_near_item_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>