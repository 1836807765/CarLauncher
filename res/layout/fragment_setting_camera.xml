<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#cccccc" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.tchip.carlauncher.view.LayoutRipple
                android:id="@+id/layoutRippleVideoQuality"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="#FFF"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image"
                    android:layout_height="@dimen/setting_item_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/icn_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:text="视频质量"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_text_size" />

                <TextView
                    android:id="@+id/textVideoQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:text="高"
                    android:textColor="#1E88E5"
                    android:textSize="@dimen/setting_item_text_size" />
            </com.tchip.carlauncher.view.LayoutRipple>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#cccccc" />

            <com.tchip.carlauncher.view.LayoutRipple
                android:id="@+id/layoutRippleVideoSize"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="#FFF"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image"
                    android:layout_height="@dimen/setting_item_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/icn_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:text="视频尺寸"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_text_size" />

                <TextView
                    android:id="@+id/textVideoSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:text="720P"
                    android:textColor="#1E88E5"
                    android:textSize="@dimen/setting_item_text_size" />
            </com.tchip.carlauncher.view.LayoutRipple>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#cccccc" />

            <com.tchip.carlauncher.view.LayoutRipple
                android:id="@+id/layoutRippleVideoTime"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="#FFF"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image"
                    android:layout_height="@dimen/setting_item_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/icn_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:text="视频长度分割"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_text_size" />

                <TextView
                    android:id="@+id/textVideoTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:text="5分钟"
                    android:textColor="#1E88E5"
                    android:textSize="@dimen/setting_item_text_size" />
            </com.tchip.carlauncher.view.LayoutRipple>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#cccccc" />

            <com.tchip.carlauncher.view.LayoutRipple
                android:id="@+id/layoutRippleCrashSensitive"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="#FFF"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image"
                    android:layout_height="@dimen/setting_item_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/icn_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:text="碰撞侦测灵敏度"
                    android:textColor="#000000"
                    android:textSize="@dimen/setting_item_text_size" />

                <TextView
                    android:id="@+id/textCrashSensitive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:text="中"
                    android:textColor="#1E88E5"
                    android:textSize="@dimen/setting_item_text_size" />
            </com.tchip.carlauncher.view.LayoutRipple>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#cccccc" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>