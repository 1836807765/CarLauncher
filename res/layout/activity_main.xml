                    android:id="@+id/quick_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/quick_wifi_bg" />

                <ImageButton
                    android:id="@+id/quick_fm"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/quick_fm_bg" />

                <ImageButton
                    android:id="@+id/quick_gps"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/quick_gps_bg" />
            </LinearLayout>

